{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },

    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "indent": ["error", "tab"],
        "no-multiple-empty-lines": [2, {
            "max": 2
        }],
        "no-tabs": 0
    },
    "extends": [
        "eslint:recommended",

    ]
}